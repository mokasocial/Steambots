<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/default_item_bg">
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:id="@+id/notification_row"
		android:orientation="horizontal"
		android:paddingTop="15dp"
		android:paddingBottom="15dp">
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:layout_weight="1"
			android:id="@+id/linearLayout2"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/product_image"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/bot_1" />
			<!-- Special for robots -->
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/robot_linear_layout"
				android:orientation="vertical">
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/electric_icon"
					android:src="@drawable/power_icon_electrical" />
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/mechanical_icon"
					android:src="@drawable/power_icon_mechanical" />
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/steam_icon"
					android:src="@drawable/power_icon_steam" />
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/life_icon"
					android:src="@drawable/power_icon_life" />
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/hand_icon"
					android:src="@drawable/power_icon_hand_size" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:layout_weight="1"
			android:orientation="vertical">
			<TextView
				android:textSize="22sp"
				android:id="@+id/product_name"
				android:text="Name"
				android:textStyle="bold"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"></TextView>
			<TextView
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:id="@+id/product_detail"
				android:text="Detail"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"></TextView>
			<TextView
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:id="@+id/product_image_code"
				android:text="Image code"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"></TextView>
			<TextView
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:id="@+id/product_price"
				android:text="Price"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"></TextView>
			<TextView
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:id="@+id/product_class"
				android:text="Type"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"></TextView>
			<Button
				android:text="@string/buy_button_text"
				android:layout_width="wrap_content"
				android:id="@+id/button_purchase"
				android:layout_height="wrap_content"></Button>
		</LinearLayout>
	</LinearLayout>
</ScrollView>